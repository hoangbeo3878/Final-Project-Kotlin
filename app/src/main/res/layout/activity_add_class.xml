<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_menu_background">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_marginTop="20dp"
        android:layout_width="39dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_back" />

    <!-- Title Text -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD CLASS"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <!-- Class Rank Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classRankSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_ranks"/>

    <!-- Class Quantity Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classQuantitySpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_quantity"/>

    <!-- Class Price Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classPriceSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_price"/>

    <!-- Class Time Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_time"/>

    <!-- Class Date Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classDateSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_date"/>

    <!-- Class Length Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classLengthSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/class_length"/>

    <!-- Class Teacher Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/classTeacherSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinner_background" />

    <!-- Class Start Date Picker -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/classStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Start Date"
            android:textColorHint="@color/black"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Add Course Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCourseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT COURSE"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"
        style="?attr/materialButtonOutlinedStyle"/>
</LinearLayout>